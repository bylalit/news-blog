<div id="admin-content">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1 class="admin-heading"><i class="fa fa-file-text"></i> All Articles</h1>
            </div>
            <div class="col-md-2">
                <a class="add-new" href="/admin/add-article">Add New Article</a>
            </div>
            <div class="col-md-12">
                <div id="articlesTable"></div>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="https://unpkg.com/tabulator-tables@6.3.1/dist/js/tabulator.min.js"></script>

<script>
    const tableData = <%- JSON.stringify(articles) %>

    var table = new Tabulator("#articlesTable", {
        data: tableData,
        layout: "fitColumns",
        pagination: true,
        paginationSize: 10,
        paginationSizeSelector: [5, 10, 15],
        columns: [
            { title: "S.No.", formatter: "rownum", width: 70, hozAlign: "center" },
            { title: "Title", field: "title", headerFilter: "input" },
            { title: "Category", field: "category.name", headerFilter: "input" },
            { title: "Date", field: "createdAt", headerFilter: "input", formatter: function(cell, formatterParams, onRendered){
                return new Date(cell.getData().createdAt).toLocaleDateString('en-GB', {
                    day: '2-digit',
                    month: 'short',
                    year: 'numeric'
                }).replace(/ /g, '-').toLowerCase();
            }},
            { title: "Author", field: "author.fullname", headerFilter: "input" },
            { title: "Action", formatter: function(cell, formatterParams, onRendered){
                return `<a href="/admin/update-article/${cell.getData()._id}" class="btn btn-success btn-sm">Edit</a>
                <button class="btn btn-danger btn-sm delete-category" onclick="deleteArticle('${cell.getData()._id}')">Delete</button>`
            }}    
        ],
    });

    // Delete User
    async function deleteArticle(id){
        try {
            if(confirm("Are you sure you want to delete this article?")){
                const response = await fetch(`/admin/delete-article/${id}`, {
                    method: "delete",
                });
                if(response.ok){
                    window.location.reload();
                }
            }
        } catch (error) {
            console.error("An error occurred while attempting to delete the article:", error);
        }
    }
</script>

<%- contentFor('tabulatorCSS') %>
<link href="https://unpkg.com/tabulator-tables@6.3.1/dist/css/tabulator.min.css" rel="stylesheet">